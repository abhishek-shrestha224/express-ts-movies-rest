{
  "compilerOptions": {
    /* Language and Environment */
    // "target": "es2022",
    // "module": "es2022",
    // "moduleResolution": "node",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
